                <ImageBrush ImageSource="Imagenes/btnInicioAventura.png" />
            </Button.Background>
        </Button>
        <TextBox TextWrapping="Wrap" Text="Aventura Gráfica Pablo Guerrero" Margin="174,137,174,0" Style="{StaticResource headerTextStyle}" Height="31" VerticalAlignment="Top"/>
    </Grid>

</Window>
